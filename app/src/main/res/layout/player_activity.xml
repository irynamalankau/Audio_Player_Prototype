<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_player"
        style="@style/card_player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            style="@style/card_image_player"
            app:srcCompat="@drawable/ic_musical_note" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/song_title_player"
        style="@style/song_title_player"
        android:layout_marginTop="24dp"
        android:text="Song"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_player" />

    <TextView
        android:id="@+id/artist_name"
        style="@style/artist_player"
        android:text="Artist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/song_title_player" />

    <ImageView
        android:id="@+id/icon_play"
        style="@style/icon_play"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toStartOf="@+id/icon_skip_next"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/icon_skip_previous"
        app:layout_constraintTop_toBottomOf="@+id/artist_name"
        app:srcCompat="@drawable/ic_play_arrow" />

    <ImageView
        android:id="@+id/icon_skip_previous"
        style="@style/nav_icon"
        app:layout_constraintBottom_toBottomOf="@+id/icon_play"
        app:layout_constraintEnd_toStartOf="@+id/icon_play"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/icon_fast_rewind"
        app:layout_constraintTop_toTopOf="@+id/icon_play"
        app:srcCompat="@drawable/ic_skip_previous" />

    <ImageView
        android:id="@+id/icon_skip_next"
        style="@style/nav_icon"
        app:layout_constraintBottom_toBottomOf="@+id/icon_play"
        app:layout_constraintEnd_toStartOf="@+id/icon_fast_forward"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/icon_play"
        app:layout_constraintTop_toTopOf="@+id/icon_play"
        app:srcCompat="@drawable/ic_skip_next" />

    <ImageView
        android:id="@+id/icon_fast_rewind"
        style="@style/icon_fast_rewind"
        app:layout_constraintBottom_toBottomOf="@+id/icon_skip_previous"
        app:layout_constraintEnd_toStartOf="@+id/icon_skip_previous"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/icon_skip_previous"
        app:srcCompat="@drawable/ic_fast_rewind" />

    <ImageView
        android:id="@+id/icon_fast_forward"
        style="@style/icon_fast_forward"
        app:layout_constraintBottom_toBottomOf="@+id/icon_skip_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/icon_skip_next"
        app:layout_constraintTop_toTopOf="@+id/icon_skip_next"
        app:srcCompat="@drawable/ic_fast_forward" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        style="@style/Widget.MaterialComponents.BottomNavigationView.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>